<% include ./partials/header %>

<div class="user-form">
  <h1>Sign Up</h1>
  <form id="signup-form" action="/users/register" method="POST">
    <div class="form-group">
      <label>Username</label>
      <input id="input-username" type="text" name="username" placeholder = "Username">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input id="input-password" type="password" name="password" placeholder = "Password">
    </div>
    <div class="user-form-button">
      <button type="submit">signup</button>
    </div>
  </form>
</div>

<div class="user-q">
    <p>Already have a myQR account? <a href="/users/login">Login!</a></p>
  </div>

