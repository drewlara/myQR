<% include ./partials/header %>

<div class="code-edit-form">
  <h1>Edit Code</h1>
  <form action="/codes/<%= code._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label>Code Title</label>
      <input type="text" name="title" placeholder="title" value="<%= code.title %>">
    </div>
    <div class="form-group">
        <label>Code Description</label>
        <textarea name="description" placeholder="Code Description"><%= code.description %></textarea>
    </div>
    <div class="edit-form-button">
      <button type="submit">Submit Changes</button>
    </div>
  </form>
  <p class="back-to-codes"><a href="/codes/<%= code._id %>">Back to Code</a></p>
</div>

<% include ./partials/footer %>